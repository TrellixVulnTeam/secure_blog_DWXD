<%- include("./partials/header") %>
<%- include("./partials/navbarloggedin", {username:username}) %>
<style>
  
  .login {
        min-height: 100vh;
    }
    
    .bg-image {
        background-image: url('https://i.ibb.co/7n50657/2953955.jpg');
        background-size: cover;
        background-position: center;
    }
    .btn-primary{
        background-color: #0b80fc !important;
        background-repeat: repeat-x;
        color: #fff !important;
    }
  
    .btn-primary:hover, .btn-primary:focus, .btn-primary:active, .btn-primary.active, .open .dropdown-toggle.btn-primary {
        background-color: #0b80fc !important;
        background-repeat: repeat-x;
        color: rgb(250, 246, 246) !important;
    }

</style>
<% blogs.forEach(blog => { %>
<div class="container-fluid ps-md-0">
    <div class="row g-0">
      <div class="d-none d-md-flex col-md-4 col-lg-6 bg-image"></div>
      <div class="col-md-8 col-lg-6">
        <div class="login d-flex align-items-center py-5">
          <div class="container">
            <div class="row">
              <div class="col-md-9 col-lg-8 mx-auto">
                <h3 class="login-heading mb-4">Edit your post!</h3>
  
            <form action="/edit/<%= blog.random %>" method="POST">
                <div class="form-group">
                    <label for="title">Title<span class="required-field">*</span></label>
                    <input type="text" value="<%= blog.title %>" class="form-control" placeholder="Blog title here..." name="title" required>
                </div> 

                <div class="form-group">
                  <label for="message">Message<span class="required-field">*</span></label>
                  <textarea class="form-control" id="message" type="text" placeholder="Write your blog here..." style="height: 20rem;" name="message" required><%= blog.message %></textarea>
              </div> 

              <div class="form-group float-end">
                <button class="btn btn-primary btn-md" id="submitButton" type="submit">Save Changes</button>
                <button class="btn btn-primary btn-md" id="submitButton" type="submit">Cancel</button>
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>
</div>
</div>
  <%}) %>
  <%- include("./partials/footer") %>